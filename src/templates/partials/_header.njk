<div class="header">
    <div class="header__wrap">
        <div class="header__container container">
            <div class="header__logo">
                <a href="index.html">
                    <img src="../images/logo.svg" alt="Diamond logo">
                </a>
            </div>
            <div class="header__nav">
                <nav class="header__menu menu">
                    <div class="menu__icon">
                        <span></span>
                        <span></span>
                        <span></span>
                        <span></span>
                    </div>
                    <ul class="menu__list">
                        {% set menuItems = [
                            ['Home', 'index.html'],
                            ['About', 'about.html'],
                            ['Contact', 'contact.html']
                        ] %}
                        {% for item, link in menuItems %}
                            <li class="menu__item"><a href="{{ link }}" class="menu__link">{{ item }}</a></li>
                        {% endfor %}
                    </ul>
                </nav>
            </div>
        </div>
    </div>
    <div class="header__fixed"></div>
</div>
